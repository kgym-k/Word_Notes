<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/shelf_edit_text"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="64dp"
                android:layout_marginTop="64dp"
                android:layout_marginEnd="64dp"
                android:hint="@string/name"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:startIconDrawable="@drawable/ic_outline_folder">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/shelf_editText_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/colorSelect1_selected_shelf_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="36dp"
                android:visibility="invisible"
                app:layout_constraintEnd_toStartOf="@+id/colorSelect2_selected_shelf_edit"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/shelf_edit_text"
                app:srcCompat="@drawable/ic_circle"
                app:tint="@color/colorSelect1" />

            <ImageView
                android:id="@+id/colorSelect1_unselected_shelf_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="36dp"
                android:layout_marginBottom="36dp"
                app:layout_constraintBottom_toTopOf="@+id/create_shelf"
                app:layout_constraintEnd_toStartOf="@+id/colorSelect2_selected_shelf_edit"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/shelf_edit_text"
                app:srcCompat="@drawable/ic_circle_outline"
                app:tint="@color/colorSelect1" />

            <ImageView
                android:id="@+id/colorSelect2_selected_shelf_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:layout_constraintEnd_toStartOf="@+id/colorSelect3_selected_shelf_edit"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/colorSelect1_selected_shelf_edit"
                app:layout_constraintTop_toTopOf="@+id/colorSelect1_selected_shelf_edit"
                app:srcCompat="@drawable/ic_circle"
                app:tint="@color/colorSelect2" />

            <ImageView
                android:id="@+id/colorSelect2_unselected_shelf_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@+id/colorSelect3_selected_shelf_edit"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/colorSelect1_selected_shelf_edit"
                app:layout_constraintTop_toTopOf="@+id/colorSelect1_selected_shelf_edit"
                app:srcCompat="@drawable/ic_circle_outline"
                app:tint="@color/colorSelect2" />

            <ImageView
                android:id="@+id/colorSelect3_selected_shelf_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:layout_constraintEnd_toStartOf="@+id/colorSelect4_selected_shelf_edit"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/colorSelect2_selected_shelf_edit"
                app:layout_constraintTop_toTopOf="@+id/colorSelect2_selected_shelf_edit"
                app:srcCompat="@drawable/ic_circle"
                app:tint="@color/colorSelect3" />

            <ImageView
                android:id="@+id/colorSelect3_unselected_shelf_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@+id/colorSelect4_selected_shelf_edit"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/colorSelect2_selected_shelf_edit"
                app:layout_constraintTop_toTopOf="@+id/colorSelect2_selected_shelf_edit"
                app:srcCompat="@drawable/ic_circle_outline"
                app:tint="@color/colorSelect3" />

            <ImageView
                android:id="@+id/colorSelect4_selected_shelf_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:layout_constraintEnd_toStartOf="@+id/colorSelect5_selected_shelf_edit"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/colorSelect3_selected_shelf_edit"
                app:layout_constraintTop_toTopOf="@+id/colorSelect3_selected_shelf_edit"
                app:srcCompat="@drawable/ic_circle"
                app:tint="@color/colorSelect4" />

            <ImageView
                android:id="@+id/colorSelect4_unselected_shelf_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@+id/colorSelect5_selected_shelf_edit"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/colorSelect3_selected_shelf_edit"
                app:layout_constraintTop_toTopOf="@+id/colorSelect3_selected_shelf_edit"
                app:srcCompat="@drawable/ic_circle_outline"
                app:tint="@color/colorSelect4" />

            <ImageView
                android:id="@+id/colorSelect5_selected_shelf_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="48dp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/colorSelect4_selected_shelf_edit"
                app:layout_constraintTop_toTopOf="@+id/colorSelect4_selected_shelf_edit"
                app:srcCompat="@drawable/ic_circle"
                app:tint="@color/colorSelect5" />

            <ImageView
                android:id="@+id/colorSelect5_unselected_shelf_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="48dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/colorSelect4_selected_shelf_edit"
                app:layout_constraintTop_toTopOf="@+id/colorSelect4_selected_shelf_edit"
                app:srcCompat="@drawable/ic_circle_outline"
                app:tint="@color/colorSelect5" />

            <Button
                android:id="@+id/create_shelf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/quiz_button_background"
                android:elevation="4dp"
                android:text="@string/add"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

